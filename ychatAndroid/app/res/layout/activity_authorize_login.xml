<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_authorize_bg">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/login_icon"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/login_logo" />

    <LinearLayout
        android:id="@+id/btn_wx_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/general_auth_login_bg"
        android:elevation="5dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginRight="9dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/login_btn_wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tx_phone_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:text="手机号登录"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_be6913"
        android:textSize="17sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_wx_login" />
    <TextView
        android:id="@+id/login_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/dp_10"
        android:text="点击登录即表示阅读并同意《用户使用协议》"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />




</android.support.constraint.ConstraintLayout>