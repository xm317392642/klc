<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="48dp" android:height="30dp" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ff10bb5d" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:width="48dp" android:height="30dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#d210bb5d" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>