<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_menu_background"
    android:layout_gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:background="@drawable/main_menu_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/main_menu_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/main_menu_chat"
            android:drawablePadding="@dimen/dp_10"
            android:padding="15dp"
            android:text="发起群聊"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/main_menu_chat_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/main_menu_line"
            app:layout_constraintEnd_toEndOf="@+id/main_menu_chat"
            app:layout_constraintStart_toStartOf="@+id/main_menu_chat"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_chat" />

        <TextView
            android:id="@+id/main_menu_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/main_menu_add"
            android:drawablePadding="@dimen/dp_10"
            android:padding="15dp"
            android:text="添加好友"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_chat_line" />

        <View
            android:id="@+id/main_menu_add_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/main_menu_line"
            app:layout_constraintEnd_toEndOf="@+id/main_menu_add"
            app:layout_constraintStart_toStartOf="@+id/main_menu_add"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_add" />

        <TextView
            android:id="@+id/main_menu_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/main_menu_scan"
            android:drawablePadding="@dimen/dp_10"
            android:padding="15dp"
            android:text="扫一扫"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_add_line" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>