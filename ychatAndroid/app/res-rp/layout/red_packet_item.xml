<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bri_send"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:background="@drawable/red_packet_send_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_bri_mess_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="8dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="恭喜发财，大吉大利！"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bri_status_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="34dp"
            android:gravity="center|left"
            android:text="@string/check_rp"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bri_rev"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:background="@drawable/red_packet_rev_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_bri_mess_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="8dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="恭喜发财，大吉大利！"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bri_status_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="34dp"
            android:gravity="center|left"
            android:text="@string/open_rp"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

</FrameLayout>
