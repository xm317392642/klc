<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/team_invite_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/team_invite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:maxWidth="200dp"
        android:minWidth="160dp"
        android:text="邀请你加入群聊"
        android:textColor="@color/color_010101"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_invite_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:maxWidth="160dp"
            android:maxLines="4"
            android:minWidth="120dp"
            android:minLines="2"
            android:text="123456789012345678901234567890123456789012345678901234567890"
            android:textColor="@color/color_grey_888888"
            android:textSize="@dimen/text_size_13" />

        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/team_invite_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            app:riv_corner_radius="2dp" />

    </LinearLayout>

</LinearLayout>